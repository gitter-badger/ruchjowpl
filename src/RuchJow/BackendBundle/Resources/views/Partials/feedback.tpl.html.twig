{% extends '@RuchJowBackend/Partials/stdPage.html.twig' %}

{% block title %}
    Feedback
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            <div class="content-block">
                <table class="data-table" ng-class="{ 'in-progress-center': loading }">
                    <thead>
                    <tr>
                        <th>Data</th>
                        <th>Godzina</th>
                        <th>Tytu≈Ç</th>
                        <th>Opis</th>
                        <th>Nick</th>
                        <th>Kontakt</th>
                    </tr>
                    </thead>
                    <tr ng-repeat="entry in feedbackData|orderBy:'date':true">
                        <td class="tight">[[ entry.date|date:'yyyy.MM.dd' ]]</td>
                        <td class="tight">[[ entry.date|date:'HH:mm' ]]</td>
                        <td>[[ entry.title ]]</td>
                        <td>[[ entry.description ]]</td>
                        <td><a ui-sref="userUser({ username: entry.nick })">[[ entry.nick ]]</a></td>
                        <td>[[ entry.contact ]]</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

{% endblock %}