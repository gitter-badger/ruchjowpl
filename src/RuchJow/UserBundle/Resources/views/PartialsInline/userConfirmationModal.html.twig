{{ '<script type="text/ng-template" id="userConfirmationModal.html">' }}
    <div class="modal-header">
        <h1>Potwierdzenie poparcia</h1>
    </div>
    <div class="modal-body">
        <div class="alert-msg" ng-class="{ info: (status === 'confirmed'), pending: (status === 'pending'), warning: (status !== 'confirmed' && status !== 'pending') }">
            [[ message|translate ]]
        </div>
    </div>
    <div class="modal-footer">
        <div class="social-widgets">
            <div class="fb-like" ruch-jow-facebook-widget="" data-href="https://www.facebook.com/spolecznoscJOW" data-layout="standard" data-action="like" data-show-faces="false" data-share="true" data-width="400"></div>
            <a href="https://twitter.com/spolecznoscJOW" ruch-jow-twitter-widget="" class="twitter-follow-button" data-show-count="false" data-lang="pl" data-dnt="true">Obserwuj @spolecznoscJOW</a>
        </div>

        <button class="btn btn-primary" ng-disabled="status === 'pending'" ng-click="ok()">
            OK
        </button>
    </div>
{{ '</script>' }}